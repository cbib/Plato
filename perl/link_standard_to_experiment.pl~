## Dependancies
use strict;
use warnings;
use Data::Dumper;

####### Global vars #######

my $activity_file = shift @ARGV;


open(STREAM, "$activity_file") or die ( "can't open file: $std_file $!" );
	my @activity_tab = <STREAM>;
close(STREAM);


print "INSERT INTO standard_enzyme VALUES ";

foreach my $line (@activity_tab) {
	$line =~ s/\{|\}//g;

	my @values = split(/\t/, $line);
	foreach my $word (@values) {
		chomp $word;
	}


	my $ezcode=$values[0];
	my $materialfk = $values[1];
	my $protocolfk = $values[2];
	my $value = $values[3];
	

	print "(\"\", ";
	print "1";
	print 

	print "),\n";

}





































